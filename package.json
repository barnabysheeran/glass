{
  "name": "glass",
  "version": "1.0.1",
  "description": "Glass",
  "author": "Barnaby Sheeran",
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "start": "webpack serve --config script/webpack.config.development.js",
    "build": "webpack --config script/webpack.config.production.js",
    "lint": "run-s lint:*",
    "lint:js": "eslint . || exit 0",
    "lint:todo": "leasot \"src/**/*.{js,css,html}\" || exit 0",
    "depcruise": "run-s depcruise:*",
    "depcruise:all": "depcruise --config ./tool/depcruise/config-all.js --output-type dot src | dot -T svg > ./tool/depcruise/dependencygraph-all.svg",
    "depcruise:selected": "depcruise --config ./tool/depcruise/config-selected.js --output-type dot src | dot -T svg > ./tool/depcruise/dependencygraph-selected.svg"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.6",
    "gl-matrix": "^3.4.3"
  },
  "devDependencies": {
    "@babel/core": "^7.27.7",
    "@babel/eslint-parser": "^7.27.5",
    "@babel/plugin-transform-runtime": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "babel-loader": "^10.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "dependency-cruiser": "^16.10.3",
    "eslint": "^9.29.0",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.2.0",
    "html-webpack-plugin": "^5.6.3",
    "leasot": "^14.4.0",
    "mini-css-extract-plugin": "^2.9.2",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.6.2",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "@babel/plugin-transform-runtime",
        {
          "regenerator": true
        }
      ]
    ]
  },
  "browserslist": [
    "Last 2 versions",
    "> 1%"
  ],
  "prettier": {
    "useTabs": true,
    "singleQuote": true,
    "printWidth": 80,
    "endOfLine": "auto"
  }
}
